<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/list_item">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/result_comparison_item_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/result_comparison_item_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="50m dowolny"
                style="@style/Body2MenuRoboto14Pt"
                />

            <LinearLayout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/result_comparison_item_progress_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_gravity="center"
                    tools:text="-21.42%"
                    style="@style/CaptionRoboto12Pt"
                    android:layout_marginEnd="5dp"
                    />
                <ImageView
                    android:id="@+id/medalIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    tools:src="@drawable/medal_bronze_icon32"
                    android:layout_marginHorizontal="14dp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/place"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:gravity="center"
                    android:text="4 msc"
                    android:visibility="gone"
                    style="@style/Roboto14Pt"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/result_comparison_item_before_info"
            app:layout_constraintTop_toBottomOf="@id/result_comparison_item_header_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/result_comparison_item_entry_time_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/result_comparison_item_prev_best_time_container"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/result_comparison_item_header"
                    style="@style/CaptionRoboto12Pt"
                    android:text="@string/entry_time"/>
                <TextView
                    android:id="@+id/result_comparison_item_entry_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="01:08.22"
                    style="@style/Roboto14Pt"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/result_comparison_item_prev_best_time_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/result_comparison_item_entry_time_container"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CaptionRoboto12Pt"
                    android:text="@string/best_time"/>
                <TextView
                    android:id="@+id/result_comparison_item_best_prev_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="01:06.22"
                    style="@style/Roboto14Pt"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/result_comparison_item_actual_time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/result_comparison_item_before_info"
            android:orientation="vertical">
            <TextView
                android:id="@+id/result_comparison_item_actual_time_container_header"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/actual_result"
                style="@style/CaptionRoboto12PtBlack"/>

            <LinearLayout
                android:id="@+id/result_comparison_item_actual_time_container_time"
                app:layout_constraintTop_toBottomOf="@id/result_comparison_item_actual_time_container_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/result_comparison_item_actual_time_container_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_time"
                    style="@style/CaptionRoboto12Pt"/>
                <TextView
                    android:id="@+id/result_comparison_item_actual_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/Roboto14Pt"
                    tools:text="01:04.12"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/result_comparison_item_actual_time_container_points"
                app:layout_constraintTop_toBottomOf="@id/result_comparison_item_actual_time_container_header"
                app:layout_constraintStart_toEndOf="@id/result_comparison_item_actual_time_container_time"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/points"
                    style="@style/CaptionRoboto12Pt"
/>
                <TextView
                    android:id="@+id/result_comparison_item_actual_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/Roboto14Pt"
                    tools:text="765"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/result_comparison_item_additional_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/result_comparison_item_actual_time_container">
            <TextView
                android:id="@+id/result_comparison_item_additional_info_split_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="29.47 34.19"
                style="@style/CaptionRoboto12Pt"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>