<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/article_item_main_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/list_item.default"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:background="@drawable/normal_ripple"
        android:paddingVertical="3dp">
        <TextView
            android:id="@+id/article_item_title"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Zawody pÅ‚ywackie"
            style="?Roboto14Pt"
            android:lines="2"
            android:gravity="start"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/article_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/article_item_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/article_item_date"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="Subtitle"
                android:lines="1"
                style="?CaptionRoboto12PtBlack"/>
            <TextView
                android:id="@+id/article_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/article_item_subtitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end"
                tools:text="date"
                android:lines="1"
                style="?CaptionRoboto12PtBlack"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>