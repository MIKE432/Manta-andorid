<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/mvr_for_dashboard_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/dashboard.item">
    <ProgressBar
        android:id="@+id/mvr_for_dashboard_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           style="@style/TitleRoboto20Pt"
           android:text="Najlepsze wyniki"/>
    <LinearLayout
        android:id="@+id/mvr_for_dashboard_25_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mvr_for_dashboard_25_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/CaptionRoboto12Pt"
            android:text="@string/mvr_25"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/mvr_for_dashboard_25_title">

            <TextView
                android:id="@+id/mvr_for_dashboard_25_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Roboto14Pt"
                tools:text="400m"
                />

            <TextView
                android:id="@+id/mvr_for_dashboard_25_style"
                style="@style/Roboto14Pt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mvr_for_dashboard_25_total_time"
                app:layout_constraintStart_toEndOf="@id/mvr_for_dashboard_25_distance"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="5dp"
                tools:text="Dowolny" />

            <TextView
                android:id="@+id/mvr_for_dashboard_25_total_time"
                style="@style/Roboto14Pt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mvr_for_dashboard_25_points"
                app:layout_constraintStart_toEndOf="@id/mvr_for_dashboard_25_style"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                tools:text="26.54" />

            <TextView
                android:id="@+id/mvr_for_dashboard_25_points"
                style="@style/Roboto14Pt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintTop_toTopOf="parent"
                tools:text="707" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
       <LinearLayout
           android:id="@+id/mvr_for_dashboard_50_container"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView
               android:id="@+id/mvr_for_dashboard_50_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               style="@style/CaptionRoboto12Pt"
               android:text="@string/mvr_50"
               />
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="4dp"
               app:layout_constraintTop_toBottomOf="@+id/mvr_for_dashboard_50_title">

               <TextView
                   android:id="@+id/mvr_for_dashboard_50_distance"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   style="@style/Roboto14Pt"
                   tools:text="400m"
                   />

               <TextView
                   android:id="@+id/mvr_for_dashboard_50_style"
                   style="@style/Roboto14Pt"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/mvr_for_dashboard_50_total_time"
                   app:layout_constraintStart_toEndOf="@id/mvr_for_dashboard_50_distance"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginStart="5dp"
                   tools:text="Dowolny" />

               <TextView
                   android:id="@+id/mvr_for_dashboard_50_total_time"
                   style="@style/Roboto14Pt"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/mvr_for_dashboard_50_points"
                   app:layout_constraintStart_toEndOf="@id/mvr_for_dashboard_50_style"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginEnd="10dp"
                   android:gravity="end"
                   tools:text="26.54" />

               <TextView
                   android:id="@+id/mvr_for_dashboard_50_points"
                   style="@style/Roboto14Pt"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"

                   app:layout_constraintTop_toTopOf="parent"
                   tools:text="707" />
           </androidx.constraintlayout.widget.ConstraintLayout>
       </LinearLayout>
   </LinearLayout>
</androidx.cardview.widget.CardView>