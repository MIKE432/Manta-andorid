<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/medal_stats_item_gold_medals_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/medal_stats_item_silver_medals_stats">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/medal_stats_item_guideline_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55" />

            <ImageView
                android:id="@+id/medal_stats_item_gold_medal"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="5dp"
                android:src="@drawable/medal_gold_icon32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/medal_stats_item_gold_medal"
                app:layout_constraintEnd_toEndOf="@id/medal_stats_item_gold_medal"
                app:layout_constraintStart_toEndOf="@id/medal_stats_item_guideline_gold">

                <TextView
                    android:id="@+id/medal_stats_item_gold_medal_count"
                    style="@style/Body1Roboto14Pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_colored"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0sp"
                    android:padding="2sp"
                    tools:text="32" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/medal_stats_item_silver_medals_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/medal_stats_item_gold_medals_stats"
        app:layout_constraintEnd_toStartOf="@id/medal_stats_item_bronze_stats">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/medal_stats_item_silver_medal"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="5dp"
                android:src="@drawable/medal_silver_icon32"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/medal_stats_item_guideline_silver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/medal_stats_item_silver_medal"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toEndOf="@id/medal_stats_item_guideline_silver">
                <TextView
                    android:id="@+id/medal_stats_item_silver_medal_count"
                    style="@style/Body1Roboto14Pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_colored"
                    android:gravity="center"
                    android:padding="2sp"
                    android:lineSpacingExtra="0sp"
                    android:includeFontPadding="false"
                    tools:text="32" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/medal_stats_item_bronze_stats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/medal_stats_item_silver_medals_stats">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/medal_stats_item_bronze_medals_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/medal_stats_item_guideline_bronze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.55"/>

            <ImageView
                android:id="@+id/medal_stats_item_bronze_medal"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:padding="5dp"
                android:src="@drawable/medal_bronze_icon32"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/medal_stats_item_bronze_medal"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toEndOf="@id/medal_stats_item_guideline_bronze">
                <TextView
                    android:id="@+id/medal_stats_item_bronze_medal_count"
                    style="@style/Body1Roboto14Pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/medal_stats_item_bronze_medal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/border_colored"
                    android:padding="2sp"
                    android:lineSpacingExtra="0sp"
                    android:includeFontPadding="false"
                    tools:text="11" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>