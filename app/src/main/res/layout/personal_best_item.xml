<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/dashboard.item.no__horizontal_padding">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/personal_best_item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50m dowolny"
            android:paddingHorizontal="5dp"
            style="?Body2MenuRoboto14Pt"
            app:layout_constraintTop_toTopOf="parent"
            android:textAllCaps="true"
            android:background="@drawable/bottom_border"/>
       <androidx.constraintlayout.widget.ConstraintLayout
           app:layout_constraintTop_toBottomOf="@id/personal_best_item_header"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.constraintlayout.widget.ConstraintLayout
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/personal_best_item_container"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:id="@+id/personal_best_item_25_container"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toStartOf="@id/personal_best_item_50_container"
                   android:layout_margin="5dp"
                   android:orientation="vertical"
                   android:background="@drawable/rounded_corners_ripple">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       style="?CaptionRoboto12Pt"
                       android:text="25m"/>
                   <TextView
                       android:id="@+id/personal_best_item_25_total_time"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       style="?Body1Roboto14Pt"
                       tools:text="2:21.67"/>
                   <TextView
                       android:id="@+id/personal_best_item_25_points"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       style="?Body1Roboto14Pt"
                       tools:text="705"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/personal_best_item_50_container"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toEndOf="@id/personal_best_item_25_container"
                   android:layout_margin="5dp"
                   android:orientation="vertical"
                   android:background="@drawable/rounded_corners_ripple"
                   >
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       style="?CaptionRoboto12Pt"
                       android:text="50m"/>
                   <TextView
                       android:id="@+id/personal_best_item_50_total_time"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       style="?Body1Roboto14Pt"
                       tools:text="2:21.67"/>
                   <TextView
                       android:id="@+id/personal_best_item_50_points"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       style="?Body1Roboto14Pt"
                       tools:text="705"/>
               </LinearLayout>
           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>