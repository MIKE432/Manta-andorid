<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimator</item>
    </style>
    <style name="logo">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="list">

    </style>
    <style name="athetes_list" parent="list">
    </style>
    <style name="list_item">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
    </style>

    <style name="h1">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="h2">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="h3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="h4">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="h5">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="h6">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="h1.bold" parent="h1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2.bold" parent="h2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h3.bold" parent="h3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h4.bold" parent="h4">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h2.italic" parent="h2">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="h3.italic" parent="h3">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="h4.italic" parent="h4">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="dashboard">

    </style>
    <style name="dashboard.item" parent="list_item">
        <item name="contentPaddingLeft">5dp</item>
        <item name="contentPaddingRight">5dp</item>
        <item name="contentPaddingTop">3dp</item>
        <item name="contentPaddingBottom">3dp</item>
    </style>

    <style name="ActivityAnimator" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="HeadlineRoboto24Pt">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TitleRoboto20Pt">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Body2MenuRoboto14Pt">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ButtonRoboto14Pt">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#de000000</item>
    </style>
    <style name="Roboto14Pt">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Body1Roboto14Pt">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Body3Roboto14Pt">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>
    <style name="CaptionRoboto12Pt">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>
    <style name="CaptionRoboto12PtBlack">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>