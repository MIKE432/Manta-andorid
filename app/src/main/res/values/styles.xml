<resources>
    <!-- Base application theme. -->
    <style name="logo">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="list">

    </style>
    <style name="athetes_list" parent="list">
    </style>
    <style name="list_item">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="h1">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="h2">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="h3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="h4">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="h5">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="h6">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="h1.bold" parent="h1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2.bold" parent="h2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h3.bold" parent="h3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h4.bold" parent="h4">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="h2.italic" parent="h2">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="h3.italic" parent="h3">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="h4.italic" parent="h4">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="dashboard">

    </style>
    <style name="dashboard.item" parent="list_item">
        <item name="contentPaddingLeft">5dp</item>
        <item name="contentPaddingRight">5dp</item>
        <item name="contentPaddingTop">3dp</item>
        <item name="contentPaddingBottom">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="dashboard.item.no__horizontal_padding" parent="list_item">
        <item name="contentPaddingTop">3dp</item>
        <item name="contentPaddingBottom">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="dashboard.item.no_padding" parent="list_item">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ActivityAnimator" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="CardViewStyle" parent="Base.CardView">
    </style>
    <style name="CardViewStyle.Dark">
        <item name="cardBackgroundColor">@color/cool_grey</item>
    </style>
    <style name="CardViewStyle.Light">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="MantaButton" >
        <item name="android:padding">5dp</item>
    </style>
</resources>