<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/club_articles_fragment_end"
        motion:constraintSetStart="@+id/club_articles_fragment_start"
        motion:duration="1000"
        motion:motionInterpolator="linear">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/club_articles_fragment_background"
            motion:touchAnchorSide="bottom" />

    </Transition>
    <ConstraintSet android:id="@+id/club_articles_fragment_end">
        <Constraint
            android:id="@id/club_articles_fragment_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.9"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@id/club_articles_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp"
            motion:layout_constraintBottom_toBottomOf="@+id/club_articles_fragment_background"
            motion:layout_constraintStart_toStartOf="parent"
            style="?HeadlineRoboto24Pt"
            android:textSize="24sp"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/club_articles_fragment_start">
        <Constraint
            android:id="@+id/club_articles_fragment_background"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:alpha="1.0"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/club_articles_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/club_articles_fragment_background"
            motion:layout_constraintStart_toStartOf="parent"
            style="?HeadlineRoboto24Pt"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="32sp"/>
    </ConstraintSet>
</MotionScene>
