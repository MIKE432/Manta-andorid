<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <ConstraintSet android:id="@+id/article_activity_start">
        <Constraint android:id="@+id/club_articles_fragment_appbar_title"
            motion:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            style="?"
            android:gravity="start"
            motion:layout_constraintVertical_bias="1.0"

            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint android:id="@+id/club_articles_fragment_appbar_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/article_activity_end">
        <Constraint android:id="@id/club_articles_fragment_appbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?Roboto14Pt"
            android:gravity="center"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintEnd_toEndOf="parent"/>

        <Constraint android:id="@+id/club_articles_fragment_appbar_background"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/article_activity_end"
        app:constraintSetStart="@+id/article_activity_start" />
</MotionScene>
